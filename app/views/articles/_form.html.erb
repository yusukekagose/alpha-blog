<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title, "タイトル" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
        <%= f.label :description, "内容" %>
        </div>
        <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "内容を入力してください", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
      <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
           <% cb.label(class: "checkbox-inline input_checkbox"){
            cb.check_box(class: "chechbox") + cb.text
           } %>
          <% end %>
        </div>
      </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-2">
      [<%= link_to "キャンセルして記事一覧に戻る", articles_path %>]
    </div>
  </div>
</div>
